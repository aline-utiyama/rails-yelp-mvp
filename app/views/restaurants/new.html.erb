<div class="container">
  <h1>Add Restaurants</h1>

  <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: Restaurant::CATEGORIES %>
      <%= f.submit class: 'btn btn-primary my-3' %>
  <% end %>
  <%= link_to 'Back to restaurants', restaurants_path %>
</div>

<div class="container mx-auto">
  <h1>Restaurants</h1>
<div class="row row-cols-1 row-cols-md-3 justify-content-between">
  <% @restaurants.each do |restaurant| %>
    <!-- <p>Address:<%= restaurant.address %></p>
    <p>Phone:<%= restaurant.phone_number %></p> -->
    <div class="row mx-auto">
      <div class="card my-5">
        <img src="https://picsum.photos/250/200?random=2" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
          <p class="card-text">Category: <%= restaurant.category %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

